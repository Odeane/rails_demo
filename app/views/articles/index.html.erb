<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %><br />
    </li>
  <% end %>
</ul>

<% if user_signed_in? %>
<%= link_to 'New Article', new_article_path %><br>
<% end %>

<%= link_to 'Sign in', new_user_session_path %>
<%=link_to 'Sign out', destroy_user_session_path,
  method: :delete%><br>